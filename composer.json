{
  "name": "hershel-theodore-layton/portable-hack-ast-linters",
  "description": "Hack source code linters authored with portable-hack-ast.",
  "license": "MIT",
  "require": {
    "hhvm": "^4.102",
    "hershel-theodore-layton/portable-hack-ast": "dev-master || <1",
    "hershel-theodore-layton/portable-hack-ast-extras": "dev-master || <1",
    "hershel-theodore-layton/pragma": "<1"
  },
  "require-dev": {
    "hhvm/hhvm-autoload": "^3.2",
    "hhvm/hhast": "^4.102"
  },
  "scripts": {
    "post-install-cmd": [
      ".github/workflows/prepare-environment.sh"
    ],
    "post-update-cmd": [
      ".github/workflows/prepare-environment.sh"
    ]
  },
  "config": {
    "allow-plugins": {
      "hhvm/hhvm-autoload": true
    }
  }
}
